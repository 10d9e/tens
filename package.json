{
    "name": "two-hundred-card-game",
    "version": "1.0.0",
    "description": "Multi-player web version of the New Brunswick card game 200",
    "main": "index.js",
    "scripts": {
        "dev": "vite",
        "build": "tsc && vite build",
        "preview": "vite preview",
        "server": "node server/dist/index.js",
        "server:dev": "ts-node server/src/index.ts",
        "server:build": "tsc -p server/tsconfig.json",
        "server:watch": "tsc -p server/tsconfig.json --watch",
        "dev:full": "concurrently \"npm run server:dev\" \"npm run dev\"",
        "dev:full:integration": "concurrently \"INTEGRATION_TEST=true npm run server:dev\" \"INTEGRATION_TEST=true npm run dev\"",
        "build:all": "npm run server:build && npm run build",
        "start": "npm run build:all && npm run server",
        "test:stress": "node stress-test.js",
        "cli": "node cli-game.js",
        "test:integration": "node integration-test.js",
        "test:stress:fast": "concurrently \"INTEGRATION_TEST=true npm run dev:full\" \"sleep 5 && npm run test:stress -- 50\"",
        "test:stress:full": "concurrently \"npm run dev:full\" \"sleep 5 && npm run test:stress -- 50\""
    },
    "dependencies": {
        "classnames": "^2.3.2",
        "cors": "^2.8.5",
        "express": "^4.18.2",
        "framer-motion": "^10.16.16",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-hot-toast": "^2.4.1",
        "react-spring": "^9.7.3",
        "react-use-gesture": "^9.1.3",
        "socket.io": "^4.7.4",
        "socket.io-client": "^4.7.4",
        "uuid": "^9.0.1",
        "winston": "^3.18.3",
        "zustand": "^4.4.7"
    },
    "devDependencies": {
        "@tailwindcss/postcss": "^4.1.13",
        "@types/cors": "^2.8.19",
        "@types/express": "^4.17.23",
        "@types/node": "^20.10.5",
        "@types/react": "^18.2.43",
        "@types/react-dom": "^18.2.17",
        "@types/uuid": "^9.0.7",
        "@typescript-eslint/eslint-plugin": "^6.19.0",
        "@typescript-eslint/parser": "^6.19.0",
        "@vitejs/plugin-react": "^4.2.1",
        "autoprefixer": "^10.4.21",
        "concurrently": "^8.2.2",
        "postcss": "^8.5.6",
        "tailwindcss": "^4.1.13",
        "ts-node": "^10.9.2",
        "typescript": "^5.2.2",
        "vite": "^5.0.8"
    }
}